<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/text_with_icon"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <net.nyxapp.library.views.IconTextView
        android:id="@+id/text_with_icon_icon_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/text_with_icon_text"
        app:layout_constraintEnd_toStartOf="@id/text_with_icon_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_with_icon_text"
        tools:text="@string/icon_right_arrow"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text_with_icon_text"
        style="@style/bodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_with_icon_icon_after"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/text_with_icon_icon_before"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="hejdwadwadadwad"
        app:layout_constraintHorizontal_bias="0.0"
        android:gravity="center"/>

    <net.nyxapp.library.views.IconTextView
        android:id="@+id/text_with_icon_icon_after"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/text_with_icon_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/text_with_icon_text"
        app:layout_constraintTop_toTopOf="@id/text_with_icon_text"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:visibility="gone"
        tools:text="@string/icon_right_arrow"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>