<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextWithIconView">
        <attr name="text_and_icon_color" format="color" />
        <attr name="text_color" format="color" />
        <attr name="icon_color" format="color" />
        <attr name="text" format="string" />
        <attr name="nyx_icon" format="string" />
        <attr name="icon_placement" format="enum">
            <enum name="before" value="0"/>
            <enum name="after" value="1"/>
        </attr>
        <attr name="icon_type" format="enum">
            <enum name="light" value="0"/>
            <enum name="brand" value="1"/>
            <enum name="solid" value="2"/>
            <enum name="regular" value="3"/>
            <enum name="material" value="4"/>
            <enum name="mixed" value="5"/>
        </attr>
        <attr name="text_alignment" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>
        <attr name="icon_size" format="dimension" />
        <attr name="icon_width" format="dimension" />
        <attr name="text_width" format="dimension" />
        <attr name="input_type" format="enum" >
            <enum name="textCapWords" value="0" />
        </attr>
        <attr name="text_size" format="dimension" />
    </declare-styleable>
    <declare-styleable name="NyxImageView">
        <attr name="image" format="string" />
        <attr name="imageType" format="enum">
            <enum name="rounded" value="0"/>
            <enum name="circle" value="1"/>
            <enum name="square" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="IconTextView">
        <attr name="type" format="enum">
            <enum name="light" value="0"/>
            <enum name="brand" value="1"/>
            <enum name="solid" value="2"/>
            <enum name="regular" value="3"/>
            <enum name="material" value="4"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="NyxProgressBar">
        <attr name="textVisible" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="IconButton">
        <attr name="button_type" format="enum">
            <enum name="light" value="0"/>
            <enum name="brand" value="1"/>
            <enum name="solid" value="2"/>
            <enum name="regular" value="3"/>
            <enum name="material" value="4"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="NyxProgressImage">
        <attr name="size" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="Accent">
        <attr name="accent" format="enum">
            <enum name="member" value="0"/>
            <enum name="employee" value="1"/>
        </attr>
    </declare-styleable>
</resources>